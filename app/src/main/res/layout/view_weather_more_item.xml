<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/elevation_lvl3"
    app:cardBackgroundColor="@color/card_bg"
    app:cardCornerRadius="@dimen/corner_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d2">

        <include
            android:id="@+id/uvIndexLayout"
            layout="@layout/view_list_item"
            android:layout_width="@dimen/d0"
            android:layout_height="@dimen/d6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/windLayout"
            layout="@layout/view_list_item"
            android:layout_width="@dimen/d0"
            android:layout_height="@dimen/d6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uvIndexLayout" />

        <include
            android:id="@+id/humidityLayout"
            layout="@layout/view_list_item"
            android:layout_width="@dimen/d0"
            android:layout_height="@dimen/d6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/windLayout" />

        <include
            android:id="@+id/dewPointLayout"
            layout="@layout/view_list_item"
            android:layout_width="@dimen/d0"
            android:layout_height="@dimen/d6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/humidityLayout" />

        <include
            android:id="@+id/visibilityLayout"
            layout="@layout/view_list_item"
            android:layout_width="@dimen/d0"
            android:layout_height="@dimen/d6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dewPointLayout" />

        <include
            android:id="@+id/ozoneLayout"
            layout="@layout/view_list_item"
            android:layout_width="@dimen/d0"
            android:layout_height="@dimen/d6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/visibilityLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
